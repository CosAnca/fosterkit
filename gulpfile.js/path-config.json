{
  "src": "./src",
  "dest": "./public",

  "html": {
    "src": "views",
    "dest": "./"
  },

  "static": {
    "src": "assets/static",
    "dest": "./"
  },

  "javascripts": {
    "src": "assets/js",
    "dest": "assets/js"
  },

  "stylesheets": {
    "src": "assets/styles",
    "dest": "assets/css"
  },

  "criticalCss": {
    "src": "./**/*.html",
    "dest": "./"
  },

  "images": {
    "src": "assets/images",
    "dest": "assets/images"
  },

  "fonts": {
    "src": "assets/fonts",
    "dest": "assets/fonts"
  },

  "icons": {
    "src": "assets/icons",
    "dest": "assets/images"
  }
}
