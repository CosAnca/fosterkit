extends layout/_layout

block content

  // Site content
  main.site-content.u-padding-top-large
    .o-container
      p.u-text-center New width classes
      .o-layout
        - for (var x = 1; x <= 12; x++)
          .o-layout__item.u-margin-bottom(class="u-width-1/12@large" style="background-color: cornflowerblue; text-align: center; color: white;") 1/12
        .o-layout__item.u-margin-bottom(class="u-width-1/6@large" style="background-color: cornflowerblue; text-align: center; color: white;") 1/6
        .o-layout__item.u-margin-bottom(class="u-width-1/4@large" style="background-color: cornflowerblue; text-align: center; color: white;") 1/4
        .o-layout__item.u-margin-bottom(class="u-width-1/3@large" style="background-color: cornflowerblue; text-align: center; color: white;") 1/3
        .o-layout__item.u-margin-bottom(class="u-width-1/2@large" style="background-color: cornflowerblue; text-align: center; color: white;") 1/2
        .o-layout__item.u-margin-bottom(class="u-width-2/3@large" style="background-color: cornflowerblue; text-align: center; color: white;") 2/3
        .o-layout__item.u-margin-bottom(class="u-width-3/4@large" style="background-color: cornflowerblue; text-align: center; color: white;") 3/4
        .o-layout__item.u-margin-bottom(class="u-width-1/1@large" style="background-color: cornflowerblue; text-align: center; color: white;") 1/1
      .o-layout
        .o-layout__item.u-margin-bottom(class="u-width-1/3@large" style="background-color: cornflowerblue; text-align: center; color: white;") 1
        .o-layout__item.u-margin-bottom(class="u-width-2/3@large" style="background-color: cornflowerblue; text-align: center; color: white;")
          .o-layout.o-layout--nested
            .o-layout__item.u-margin-bottom(class="u-width-1/2@medium u-width-1/4@large" style="background-color: darkslateblue; text-align: center; color: white;") 1/4
            .o-layout__item.u-margin-bottom(class="u-width-1/2@medium u-width-1/3@large" style="background-color: darkslateblue; text-align: center; color: white;") 1/3
            .o-layout__item.u-margin-bottom(class="u-width-2/3@large" style="background-color: darkslateblue; text-align: center; color: white;") 2/3
            .o-layout__item.u-margin-bottom(class="u-width-3/4@large" style="background-color: darkslateblue; text-align: center; color: white;") 3/4
            .o-layout__item.u-margin-bottom(class="u-width-1/1@large" style="background-color: darkslateblue; text-align: center; color: white;") 1/1
            - for (var y = 1; y <= 4; y++)
              .o-layout__item.u-margin-bottom(class="u-width-1/2@large" style="background-color: darkslateblue; text-align: center; color: white;")= y
