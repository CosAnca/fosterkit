<!DOCTYPE html>
<html class="no-js" lang="en">

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{%- if title -%}{{ title }} | {{ site.title }}{%- else -%}{{ site.title }}{%- endif -%}</title>

    {% include "_meta.njk" %}

    {% block styles %}
      <link rel="stylesheet" href="{{ '/assets/css/styles.css' | url }}">
    {% endblock %}

  </head>

  <body>

    {% include "_header.njk" %}

    <main id="main" tabindex="-1">
      {{ content | safe }}
    </main>

    {% include "_footer.njk" %}

    {% block scripts %}
      <script defer src="{{ '/assets/js/app.js' | url }}"></script>
    {% endblock %}
  </body>

</html>
